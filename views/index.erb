<% else %>
  <div class="button"><a href="/sign-in">Sign out</a></div>
<% end %>

<body class="container">
<div class="postcontents">
	<form action="/posts" method="POST">
<!-- 		<input type="text" name="subject" placeholder="Enter post title"><br> -->

		<textarea name="body" id="posts" cols="100" rows="3" placeholder="What would you like to talk about?"></textarea><br>				
		<input type="submit" name="submit" class="submit-button" />
	</form>
	</div>
</body>
		
		



<% @posts.reverse_each do |post| %>
<h4><%= post.subject %></h4>
<h4><%= post.user.fname %></h4>
<p><%= post.body %></p>
<% end %>






